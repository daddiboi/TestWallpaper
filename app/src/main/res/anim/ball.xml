<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/linear_interpolator"
    android:fillAfter="true">


    <scale
        android:fromXScale="1"
        android:toXScale="1.05"
        android:fromYScale="1"
        android:toYScale="0.95"
        android:duration="1000" />
    <set
        android:interpolator="@android:anim/accelerate_interpolator"
        android:startOffset="1000">
        <scale
            android:fromXScale="1.05"
            android:toXScale="0.9"
            android:fromYScale="0.95"
            android:toYScale="1.1"

            android:duration="1400" />
    </set>
    <set
        android:interpolator="@android:anim/accelerate_interpolator"
        android:startOffset="2400">
        <scale
            android:fromXScale="0.9"
            android:toXScale="1.02"
            android:fromYScale="1.1"
            android:toYScale="0.98"

            android:duration="1000" />
    </set>
    <set
        android:interpolator="@android:anim/accelerate_interpolator"
        android:startOffset="3400">
        <scale
            android:fromXScale="1.02"
            android:toXScale="0.98"
            android:fromYScale="0.98"
            android:toYScale="1.02"

            android:duration="1000" />
    </set>
    <set
        android:interpolator="@android:anim/accelerate_interpolator"
        android:startOffset="4400">
        <scale
            android:fromXScale="0.98"
            android:toXScale="1"
            android:fromYScale="1.02"
            android:toYScale="1"

            android:duration="600" />
    </set>
</set>
